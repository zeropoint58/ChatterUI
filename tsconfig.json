{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["app/components/*"],
            "@screens/*": ["app/screens/*"],
            "@lib/*": ["lib/*"],
            "@assets/*": ["assets/*"],
            "@public/*": ["public/*"],
            "@db": ["db/db"]
        },
        "allowJs": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "app/_layout.tsx"
    ]
}
